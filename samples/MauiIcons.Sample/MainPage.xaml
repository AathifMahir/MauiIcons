<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiIcons.Sample"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:DataType="local:MainPage"
             x:Class="MauiIcons.Sample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <HorizontalStackLayout HorizontalOptions="Center">
                <!--  Icons Built in Controls -->
                <mi:MauiIcon Icon="{mi:Fluent Icon=Accessibility32}" IconColor="White" EntranceAnimationType="Fade" IconSuffix="Test Suffix"/>
                <mi:MauiIcon Icon="{mi:SegoeFluent Icon=Accounts}" IconColor="Red" EntranceAnimationType="Scale"/>
                <mi:MauiIcon Icon="{mi:Material Icon=ABC}" IconColor="Cyan" EntranceAnimationType="Fade"/>
                <mi:MauiIcon Icon="{mi:FluentFilled Accessibility48Filled}" IconColor="BlueViolet" EntranceAnimationType="Rotate"/>
                <mi:MauiIcon Icon="{mi:Cupertino Airplane}" EntranceAnimationType="Rotate"/>

                <!--Icons Built in Controls-->
                <mi:MauiIcon IconColor="Blue">
                    <mi:MauiIcon.Icon>
                        <mi:Fluent Icon="AddCircle32"/>
                    </mi:MauiIcon.Icon>
                </mi:MauiIcon>

                <mi:MauiIcon Icon="{mi:SegoeFluent Accounts}" IconColor="Red"/>
                <mi:MauiIcon Icon="{mi:Material ABC}" IconColor="Cyan"/>
                <mi:MauiIcon Icon="{mi:FluentFilled Accessibility48Filled}" IconColor="BlueViolet"/>
                <mi:MauiIcon Icon="{mi:Cupertino Airplane}"/>

                <!-- Extension -->
                <Image Aspect="Center" Source="{mi:SegoeFluent Icon=ActionCenterQuiet, IconColor=Yellow}"/>
                <Image Aspect="Center" Source="{mi:Material Icon=AddRoad, IconColor=BlueViolet}"/>
                <Image Aspect="Center" Source="{mi:Fluent Icon=AddSquare20}"/>
                <Image Aspect="Center" Source="{mi:FluentFilled Icon=AddSquare20Filled, IconColor=DarkGreen}"/>
                <Image Aspect="Center" Source="{mi:Cupertino Icon=ArchiveboxFill, IconColor=LightBlue}"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="{mi:Cupertino Icon=Airplane}"/>
                <Button Text="{mi:Fluent AddCircle20, IconColor=Violet, IconSize=Large}"/>
                <Button Text="{mi:FluentFilled AccessibilityCheckmark24Filled, IconColor=BlueViolet, IconSize=Large}"/>
                <Button Text="{mi:Material ABC, IconColor=BlueViolet, IconSize=Large}"/>
                <Button Text="{mi:SegoeFluent AdjustHologram, IconColor=BlueViolet, IconSize=Large}"/>
            </HorizontalStackLayout>
                

            <Label HorizontalOptions="Center">Label Based Icons</Label>
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="{mi:Material Icon=AccountCircle, IconColor=Yellow}"/>
                <Label Text="{mi:MaterialOutlined Icon=AccountCircle, IconColor=BlueViolet}"/>
                <Label Text="{mi:MaterialRounded Icon=AccountCircle}"/>
                <Label Text="{mi:MaterialSharp Icon=AccountCircle, IconColor=DarkGreen}"/>
                <Label Text="{mi:MaterialOutlined Icon=AccountCircle, IconColor=LightBlue}"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <SearchBar Placeholder="{mi:Fluent Icon=Accessibility48}" />
            </HorizontalStackLayout>

           

