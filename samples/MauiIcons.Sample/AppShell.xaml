<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiIcons.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiIcons.Sample"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Shell.FlyoutBehavior="Disabled">

    <TabBar mi:MauiIcon.Icon="{mi:Fluent Icon=AirplaneTakeOff24}">
        <Tab Title="Xaml" mi:MauiIcon.Icon="{mi:FluentFilled Icon=Home32Filled}">
            <ShellContent Title="Xaml" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Code" mi:MauiIcon.Icon="{mi:FluentFilled Icon=AddCircle28Filled}">
            <ShellContent Title="Code" ContentTemplate="{DataTemplate local:BindingPage}" />
        </Tab>

        <Tab Title="Markup" mi:MauiIcon.Icon="{mi:FluentFilled Icon=Home12Filled}">
            <ShellContent Title="Markup" ContentTemplate="{DataTemplate local:MarkupPage}" />
        </Tab>


    </TabBar>



</Shell>
