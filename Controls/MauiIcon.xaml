<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Icons"
             x:DataType="local:MauiIcon"
             x:Class="Maui.Icons.MauiIcon">

    <Image Aspect="Center">
        <Image.Source>
            <FontImageSource FontAutoScalingEnabled="False" Glyph="{x:Binding Icon}" FontFamily="{x:Binding CustomFontFamily}" Color="{x:Binding IconColor, FallbackValue='White'}" Size="{x:Binding IconSize, FallbackValue=30.0}"/>
        </Image.Source>
    </Image>

</ContentView>
